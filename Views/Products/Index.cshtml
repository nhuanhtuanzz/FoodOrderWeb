@model IEnumerable<FoodOrderWeb.Models.MenuItem>
@{
    ViewData["Title"] = "Products Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-5">
                <i class="fa-solid fa-box-open me-2"></i> Products
            </span>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Search form -->
                <form asp-action="Products" method="get" class="d-flex align-items-center" style="max-width: 520px;">
                    <input type="text" name="search"
                           class="form-control me-2"
                           style="height: 40px; font-size: 15px;"
                           placeholder="Tìm kiếm sản phẩm"
                           value="@Context.Request.Query["search"]" />
                    <button type="submit" class="btn btn-primary px-4" style="height: 40px;">
                        <i class="fa fa-search"></i>
                    </button>
                </form>

                <!-- Create button -->
                <a asp-action="CreateProduct" class="btn btn-success px-4 d-flex align-items-center justify-content-center" style="height: 40px;">
                    <i class="fa fa-plus me-2"></i> Create
                </a>
            </div>

            <!-- Table products -->
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:70px;">ID</th>
                        <th style="width:120px;">Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th style="width:100px;">Price</th>
                        <th style="width:110px;">Status</th>
                        <th style="width:150px;">Created</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="fa fa-info-circle me-1"></i> No products found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MenuItemId</td>

                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="~/uploads/@item.ImageUrl" alt="Product image"
                                             class="rounded" style="width:70px; height:70px; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>

                                <td>@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price.ToString("N0") ₫</td>

                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hidden</span>
                                    }
                                </td>

                                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="EditProduct" asp-route-id="@item.MenuItemId" class="btn btn-warning">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteProduct" asp-route-id="@item.MenuItemId" class="btn btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this product?');">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
