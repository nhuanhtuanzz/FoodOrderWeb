@model FoodOrderWeb.Models.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success text-white fw-bold fs-5">
            <i class="fa-solid fa-layer-group me-2"></i> Create New Category
        </div>

        <div class="card-body px-4 py-3">
            <form asp-action="CreateCategory" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter category name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SortOrder" class="form-label fw-semibold"></label>
                    <input asp-for="SortOrder" class="form-control shadow-sm" placeholder="Enter display order..." />
                    <span asp-validation-for="SortOrder" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-floppy-disk"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
