@model FoodOrderWeb.Models.Voucher
@{
    ViewData["Title"] = "Thêm mới Voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white fw-bold">
            <i class="fa fa-plus me-1"></i> Thêm mới Voucher
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label">Mã Voucher</label>
                    <input asp-for="Code" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giảm (%)</label>
                        <input asp-for="DiscountPercent" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giảm (VNĐ)</label>
                        <input asp-for="DiscountAmount" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Kích hoạt</label>
                </div>
                <button type="submit" class="btn btn-success">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>
