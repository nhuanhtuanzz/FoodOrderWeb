@model IEnumerable<FoodOrderWeb.Models.Voucher>

@{
    ViewData["Title"] = "Voucher Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-5">
                <i class="fa-solid fa-ticket me-2"></i> Quản lý mã giảm giá
            </span>
        </div>

        <div class="card-body">
            <!-- Search -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <form asp-action="Index" method="get" class="d-flex align-items-center" style="max-width: 480px;">
                    <input type="text" name="searchString"
                           class="form-control me-2"
                           style="height: 40px; font-size: 15px;"
                           placeholder="Tìm kiếm theo mã hoặc mô tả"
                           value="@Context.Request.Query["searchString"]" />
                    <button type="submit" class="btn btn-success px-4" style="height: 40px;">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
                <a asp-action="Create" class="btn btn-success px-4 d-flex align-items-center justify-content-center" style="height: 40px;">
                    <i class="fa fa-plus me-1"></i> Create
                </a>
            </div>

            <!-- Voucher list -->
            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="fa fa-info-circle me-1"></i> Không có voucher nào.
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    @foreach (var voucher in Model)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm rounded-3">
                                <div class="card-body">
                                    <h6 class="card-title fw-bold text-primary mb-2">
                                        <i class="fa-solid fa-ticket me-1"></i> @voucher.Code
                                    </h6>

                                    <p class="text-muted small mb-2">
                                        @voucher.Description
                                    </p>

                                    <p class="mb-1">
                                        <i class="fa-solid fa-percent me-1 text-secondary"></i>
                                        Giảm:
                                        @if (voucher.DiscountPercent.HasValue)
                                        {
                                            @($"{voucher.DiscountPercent.Value}%")
                                        }
                                        else if (voucher.DiscountAmount.HasValue)
                                        {
                                            @voucher.DiscountAmount.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        }
                                        else
                                        {
                                            <span>Không có</span>
                                        }
                                    </p>

                                    <p class="mb-1 small text-muted">
                                        <i class="fa-regular fa-calendar me-1"></i>
                                        @voucher.StartDate.ToString("dd/MM/yyyy") - @voucher.EndDate.ToString("dd/MM/yyyy")
                                    </p>

                                    <p class="fw-semibold @(voucher.IsActive ? "text-success" : "text-danger") mb-0">
                                        @(voucher.IsActive ? "Đang hoạt động" : "Ngừng kích hoạt")
                                    </p>
                                </div>

                                <div class="card-footer bg-white border-0 d-flex justify-content-center gap-2 py-2">
                                    <a asp-action="Details" asp-route-id="@voucher.VoucherId"
                                       class="btn btn-sm btn-outline-primary px-3">
                                        <i class="fa fa-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@voucher.VoucherId"
                                       class="btn btn-sm btn-warning text-white px-3">
                                        <i class="fa fa-pen"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@voucher.VoucherId" method="post"
                                          onsubmit="return confirm('Xóa voucher này?');" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger px-3">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
