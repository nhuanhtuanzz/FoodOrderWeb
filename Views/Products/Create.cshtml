@model FoodOrderWeb.Models.MenuItem
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fa fa-plus me-2"></i> Thêm sản phẩm mới</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateProduct" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên món ăn" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Giá</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Ảnh sản phẩm</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Còn bán</label>
                </div>

                <button type="submit" class="btn btn-success px-4 me-2">
                    <i class="fa fa-save me-1"></i> Lưu
                </button>
                <a asp-action="Products" class="btn btn-secondary px-4">
                    <i class="fa fa-arrow-left me-1"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
