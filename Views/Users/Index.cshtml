@model IEnumerable<FoodOrderWeb.Models.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-5">
                <i class="fa-solid fa-users me-2"></i> Users
            </span>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Search form -->
                <form asp-action="Users" method="get" class="d-flex align-items-center" style="max-width: 520px;">
                    <input type="text" name="searchString"
                           class="form-control me-2"
                           style="height: 40px; font-size: 15px;"
                           placeholder="Tìm kiếm người dùng"
                           value="@Context.Request.Query["searchString"]" />
                    <button type="submit" class="btn btn-primary px-4" style="height: 40px;">
                        <i class="fa fa-search"></i>
                    </button>
                </form>

                <!-- Create button -->
                <a asp-action="CreateUser" class="btn btn-success px-4 d-flex align-items-center justify-content-center" style="height: 40px;">
                    <i class="fa fa-user-plus me-2"></i> Create
                </a>
            </div>

            <!-- Table user -->
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>  
                        <th>Created At</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td> @item.Role</td>
                            

                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="EditUser" asp-route-id="@item.UserId" class="btn btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="DeleteUser" asp-route-id="@item.UserId" class="btn btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this user?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
