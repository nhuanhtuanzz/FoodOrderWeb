@model IEnumerable<FoodOrderWeb.Models.Order>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lịch sử đơn hàng đã hoàn thành</h3>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <form method="get" asp-action="History" class="d-flex mb-3">
        <input type="text" name="searchString" value="@ViewData["SearchString"]"
               class="form-control me-2" placeholder="Tìm theo tên hoặc ID..." />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>

    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User?.FullName</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td class="text-success fw-semibold">@order.OrderStatus?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-info">
                            <i class="fa fa-eye"></i> Chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

