@model IEnumerable<FoodOrderWeb.Models.Category>
@{
    ViewData["Title"] = "Categories Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-5">
                <i class="fa-solid fa-layer-group me-2"></i> Categories
            </span>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Search -->
                <form asp-action="Index" method="get" class="d-flex align-items-center" style="max-width: 520px;">
                    <input type="text" name="search" class="form-control me-2" placeholder="Tìm kiếm danh mục"
                           value="@Context.Request.Query["search"]" />
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-search"></i>
                    </button>
                </form>

                <!-- Create -->
                <a asp-action="Create" class="btn btn-success px-4 d-flex align-items-center justify-content-center">
                    <i class="fa fa-plus me-2"></i> Create
                </a>
            </div>

            <!-- Table -->
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Sort Order</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.CategoryId</td>
                            <td>@c.Name</td>
                            <td>@(c.SortOrder ?? 0)</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@c.CategoryId" class="btn btn-danger"
                                       onclick="return confirm('Bạn có chắc muốn xóa danh mục này không?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
