@model FoodOrderWeb.Models.User

@{
    ViewData["Title"] = "Sign Up";
}

<style>
    body {
        background: url('/image/homeimage.jpeg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .signup-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 80px);
        padding: 20px;
    }

    .signupform {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px 30px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.25);
        animation: fadeIn 0.8s ease-in-out;
        color: #fff;
    }

        .signupform h3 {
            font-weight: 700;
            color: #2e7d32;
            margin-bottom: 20px;
            font-size: 28px;
            text-align: center;
        }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        color: #2f2f2f;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        border-radius: 12px;
        padding: 12px 15px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
        background-color: rgba(255,255,255,0.1);
        color: #fff;
    }

        .form-control:focus {
            border-color: #43a047;
            box-shadow: 0 0 8px rgba(67, 160, 71, 0.5);
            outline: none;
            background-color: rgba(255,255,255,0.2);
        }

    .btn-success {
        background: linear-gradient(135deg, #43a047, #66bb6a);
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-weight: 600;
        font-size: 16px;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #388e3c, #43a047);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(56, 142, 60, 0.4);
        }

    .signin {
        text-align: center;
        margin-top: 20px;
    }

        .signin button {
            background-color: #444;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 10px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .signin button:hover {
                background-color: #666;
                transform: translateY(-2px);
            }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="signup-wrapper">
    <div class="signupform">
        <h3><i class="fa-solid fa-user-plus"></i> Sign Up</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Full Name..." required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Password</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="••••••••" required />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" type="text" class="form-control" placeholder="+84 123 456 789" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Role" value="Customer" />

            <button type="submit" class="btn btn-success w-100">Sign Up</button>
        </form>

        <div class="signin">
            <form asp-controller="Login" asp-action="Index">
                <button type="submit"><i class="fa-solid fa-arrow-left"></i> Back to Login</button>
            </form>
        </div>
    </div>
</div>
