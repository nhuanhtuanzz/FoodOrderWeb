@model FoodOrderWeb.Models.Combo
@{
    ViewData["Title"] = "Thêm Combo Mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <!-- Header -->
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold fs-5">
                <i class="fa-solid fa-boxes-stacked me-2"></i> Thêm Combo Mới
            </span>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>

        <!-- Body -->
        <div class="card-body px-4 py-4">
            <form asp-action="Create" method="post">
                <div class="row">
                    <!-- Mã combo -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label fw-semibold">Mã Combo</label>
                        <input asp-for="Code" class="form-control" placeholder="VD: CB001" />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>

                    <!-- Tên combo -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Tên Combo</label>
                        <input asp-for="Name" class="form-control" placeholder="VD: Combo Gà Rán" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn về combo..."></textarea>
                </div>

                <!-- Giá + Trạng thái -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-semibold">Giá (VNĐ)</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="Nhập giá combo" required />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-center">
                        <div class="form-check mt-3">
                            <input asp-for="IsAvailable" class="form-check-input" id="isAvailableCheck" />
                            <label class="form-check-label" for="isAvailableCheck">
                                Đang bán
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Lưu Combo
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fa-solid fa-xmark me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
