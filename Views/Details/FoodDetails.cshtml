@model FoodOrderWeb.Models.MenuItem
@{
    ViewData["Title"] = "Chi tiết món ăn";
    var relatedFoods = ViewBag.RelatedFoods as List<FoodOrderWeb.Models.MenuItem>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-danger">@Model.Price.ToString("C")</h4>
            <p><strong>Danh mục:</strong> @Model.Category?.Name</p>

            <!-- Giỏ hàng -->
            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex gap-2">
                <input type="hidden" name="id" value="@Model.MenuItemId" />
                <input type="hidden" name="type" value="menuitem" />

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-cart-plus"></i> Thêm vào giỏ
                </button>

                <button type="submit" formaction="@Url.Action("BuyNow", "Cart")" class="btn btn-danger">
                    <i class="fa fa-bolt"></i> Mua ngay
                </button>
            </form>
        </div>
    </div>

    <h4 class="mt-5">Món tương tự</h4>
    <div class="row">
        @foreach (var food in relatedFoods)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <img src="@food.ImageUrl" class="card-img-top" alt="@food.Name" />
                    <div class="card-body text-center">
                        <h5>@food.Name</h5>
                        <p class="text-danger">@food.Price.ToString("C")</p>
                        <a asp-action="FoodDetails" asp-route-id="@food.MenuItemId" class="btn btn-outline-success">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
