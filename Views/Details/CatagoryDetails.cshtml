@model FoodOrderWeb.Models.Category
@{
    ViewData["Title"] = "Chi tiết danh mục";
    var otherCategories = ViewBag.OtherCategories as List<FoodOrderWeb.Models.Category>;
}

<div class="container mt-4">
    <h2>@Model.Name</h2>
    <p class="text-muted">Danh mục có @Model.MenuItems.Count() món</p>

    <h4>Món trong danh mục</h4>
    <div class="row">
        @foreach (var item in Model.MenuItems)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    <div class="card-body text-center">
                        <h6>@item.Name</h6>
                        <p class="text-danger">@item.Price.ToString("C")</p>
                        <a asp-action="FoodDetails" asp-controller="Home" asp-route-id="@item.MenuItemId" class="btn btn-outline-primary">Chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <h4 class="mt-5">Danh mục khác</h4>
    <div class="row">
        @foreach (var cat in otherCategories)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <h5>@cat.Name</h5>
                        <a asp-action="CategoryDetails" asp-route-id="@cat.CategoryId" class="btn btn-outline-success">Xem</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
