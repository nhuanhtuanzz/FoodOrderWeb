@model FoodOrderWeb.Models.Voucher
@{
    ViewData["Title"] = "Chỉnh sửa Voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 650px;">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-success text-white">
            <i class="fa-solid fa-edit me-2"></i> Chỉnh sửa Voucher
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="VoucherId" />

                <div class="mb-3">
                    <label class="form-label">Mã Voucher</label>
                    <input asp-for="Code" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giảm (%)</label>
                        <input asp-for="DiscountPercent" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giảm tiền (VNĐ)</label>
                        <input asp-for="DiscountAmount" type="number" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="date" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="date" class="form-control" required />
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Kích hoạt</label>
                </div>

                <button type="submit" class="btn btn-success px-4">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
            </form>
        </div>
    </div>
</div>
